<h1 class="text-center mt-4">Sign In</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with( url: sessions_path,class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
    <div class="form-group row">
        <%= f.label :email %>
         
        <%= f.email_field :email %> 
      
    </div>

    <div class="form-group row">
        <%= f.label :password %>
        
          <%= f.password_field :password %> 
         
    </div>
    <div class="form-group row justify-content-center p-4">
      <%= f.submit "Sign In", class: "btn btn-outline-light btn-lg" %>
    </div>
<% end %>
     </div>
  </div>
</div>   


