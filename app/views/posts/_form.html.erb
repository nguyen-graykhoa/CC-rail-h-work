<% if @post.errors.any? %>
    <ul>
        <% @post.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
        <% end %>
    </ul>
<% end %>
<%= form_with(model: @post, url: posts_path ) do |form| %>
    <div>
        <%= form.label :title %>
        <br>
        <%= form.text_field :title, class: 'form-control' %>
    </div>
    <div>
        <%= form.label :body %>
        <br>
        <%= form.text_area :body, class: 'form-control' ,cols: 50, rows: 5 %>
    </div>
    <div class="mt-2">
        <%= form.submit %>
    </div>
<% end %>