<h1 class="text-center">Post Edit Page</h1>
<div class="container">
    <% if @post.errors.any? %>
        <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li>
                    <%= msg %>
                </li>
            <% end %>
        </ul>
    <% end %>
    <%= form_with(model: @post, url: post_path, method: :patch ) do |form| %>
        <div>
            <%= form.label :title %>
            <br>
            <%= form.text_field(:title, :style => "width:1303px;")  %>
        </div>
        <div>
            <%= form.label :body %>
            <br>
            <%= form.text_area :body, cols: 152, rows: 5 %>
        </div>
        <%= form.submit %>
    <% end %>
</div>
